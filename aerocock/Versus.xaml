            </Image.RenderTransform>
        </Image>
        <Image x:Name="player1_two_x" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,400,0"
               Source="Objects\whiteX.png" Stretch="None" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
